<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/tv_profile"
        style="@style/activityTitle"
        android:text="Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="136dp"
        android:layout_height="136dp"
        android:layout_marginTop="32dp"
        tools:src="@drawable/user_img"
        app:layout_constraintTop_toBottomOf="@id/tv_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow>
            <TextView
                style="@style/profileComponent"
                android:text="Name"/>

            <TextView
                android:id="@+id/tv_users_name"
                style="@style/userProfileDetail"
                tools:text="User's Name" />
        </TableRow>

        <TableRow
            android:layout_marginTop="24dp">
            <TextView
                style="@style/profileComponent"
                android:text="Username"/>

            <TextView
                android:id="@+id/tv_users_username"
                style="@style/userProfileDetail"
                tools:text="User's Username"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="24dp">
            <TextView
                style="@style/profileComponent"
                android:text="Email"/>
            <TextView
                android:id="@+id/tv_users_email"
                style="@style/userProfileDetail"
                tools:text="User's Email" />
        </TableRow>

    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_setting"
        style="@style/SignButton"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/btn_yellow"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="@id/btn_logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logout"
        style="@style/SignButton"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/btn_purple"
        android:text="Log Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>